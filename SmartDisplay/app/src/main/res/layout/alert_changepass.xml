<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backonly"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <TextView
        android:layout_marginLeft="50dp"
        android:layout_marginTop="110dp"
        android:id="@+id/resetTitle"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toRightOf="@+id/title"
        android:text="@string/resetMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="40dp"
        android:layout_below="@+id/resetTitle"
        android:id="@+id/emailTag"
        android:layout_marginLeft="50dp"
        android:textColor="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL ADDRESS"/>

    <EditText
        app:backgroundTint="@color/gray"
        android:maxLength="30"
        android:textCursorDrawable="@drawable/black_cursor"
        android:id="@+id/email"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_below="@+id/emailTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/email"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:id="@+id/cancel"
            android:background="@drawable/cancel"
            android:layout_width="wrap_content"
            android:layout_height="38dp"/>

        <Button
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:id="@+id/reset"
            android:background="@drawable/smallreset"
            android:layout_width="wrap_content"
            android:layout_height="38dp"/>

    </LinearLayout>



</RelativeLayout>